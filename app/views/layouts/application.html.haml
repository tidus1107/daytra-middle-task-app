!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title DaytraMiddleTaskApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width,initial-scala=1.0", :name => "viewport"}/
  %body
    %header.header
      .header_logos
        = link_to 'Boards','boards#index'
      .dropdown
        - if user_signed_in?
          = image_tag 'default-avatar.png',class:'header_avatar dropbtn' 
          .dropdown-content
            = link_to 'プロフィール' , '#'
            = link_to 'ログアウト' , destroy_user_session_path, data:{ method: 'delete' }
        - else
          = link_to 'ログイン', new_user_session_path, class: 'header_loginBtn'
    -# - if flash.present?
    -#   .flash
    -#     - flash.each do |key, value|
    -#       %div{:class => key}= value
    = yield
